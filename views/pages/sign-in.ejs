<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Sign In Pages</title>
  </head>
  <style>
    body {
      background-color: #dfe3e7;
    }
    .bg-white {
      background-color: #fff;
    }
  </style>
  <body>
    <section id="sign-in">
      <div
        class="container d-flex justify-content-center align-items-center min-vh-100"
      >
        <div class="bg-white p-5 rounded-4">
          <form class="">
            <h1 class="fw-bold fs-2 text-center mb-4">
              Sign in to Your Account
            </h1>
            <div class="row">
              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input
                  type="email"
                  class="form-control py-2 px-3"
                  id="email"
                  aria-describedby="emailHelp"
                  placeholder="Enter your email"
                />
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control py-2 px-3"
                  id="password"
                  placeholder="Enter your password"
                />
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100 mt-2">
              Login
            </button>
          </form>
          <div class="other-sign-in">
            <button
              type="submit"
              class="btn btn-danger btn-lg w-100 mt-2"
              id="btn-google"
            >
              Continue with Google
            </button>
            <button
              type="submit"
              class="btn btn-info btn-lg w-100 mt-2"
              id="btn-discord"
            >
              Continue with Discord
            </button>
          </div>
        </div>
      </div>
    </section>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <script>
    const discordBtn = document.getElementById("btn-discord");
    discordBtn.addEventListener("click", () => {
      window.location.href = "/api/auth/discord";
    });
    const googleBtn = document.getElementById("btn-google");
    googleBtn.addEventListener("click", () => {
      window.location.href = "/api/auth/google";
    });
  </script>
</html>
